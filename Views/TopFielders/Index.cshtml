                    @Html.DisplayNameFor(model => model.Matches)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catches)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Player)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Matches)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Catches)
    </td>
    <td>
